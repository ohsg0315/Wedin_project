<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="#ffffff"
    android:background="@drawable/round_coner_text"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="이메일 인증하기"
        android:textColor="#ffffff"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/emailAuth_number"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/round_coner_text"
        android:textColorHint="#808080"
        android:hint="인증 번호를 등록해 주세요"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:textSize="15sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="이메일로 발송 된 인증 번호를 적어주세요."
        android:textSize="16dp" />

    <TextView
        android:id="@+id/emailAuth_time_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="3:00"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/emailAuth_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/round_coner_text"
            android:text="취소"
            android:textSize="22sp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/emailAuth_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/round_coner_text"
            android:text="확인"
            android:textSize="22sp" />

    </LinearLayout>
</LinearLayout>